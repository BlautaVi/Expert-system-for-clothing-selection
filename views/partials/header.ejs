        .answer-card {
            border: 2px solid transparent;
            border-radius: 15px;
            transition: all 0.3s ease;
            cursor: pointer;
            overflow: hidden;
        }
        .answer-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            border-color: #16a085;
        }
        .answer-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
